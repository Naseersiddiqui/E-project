
@model Security_system.Models.tb_Users
<!DOCTYPE html>
<html>
<head>
    <!-- Basic Page Info -->
    <meta charset="utf-8">
    <title>Star Security Service - Admin Registeration</title>

    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Templates/Admin/vendors/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Templates/Admin/vendors/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Templates/Admin/vendors/images/favicon-16x16.png">

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/core.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/src/plugins/jquery-steps/jquery.steps.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Admin/vendors/styles/style.css">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
    <script>window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-119386393-1');</script>
</head>

<body class="login-page">
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="@Url.Action("Login", "Admin")">
                    <img src="~/Templates/Admin/vendors/images/logo.png" alt="">
                </a>
            </div>
            <div class="login-menu">
                <ul>
                    <li><a href="@Url.Action("Login", "Admin")">Login</a></li>
                </ul>
            </div>
        </div>
    </div>


    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="align-items-center">



                <!-- Form grid Start -->
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        <div class="pull-left">
                            <h4 class="text-blue h4">Register as Admin</h4>
                            <p class="mb-30">Please fill all fields to proceed</p>
                        </div>
                        <div class="pull-right">

                        </div>
                    </div>
                    @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Employee Code</label>
                                    @Html.EditorFor(model => model.emp_code, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Employee Code"@*, required = "required"*@
}
})
                                    @Html.ValidationMessageFor(model => model.emp_code, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.EditorFor(model => model.name, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Name"@*, required = "required"*@
}
})
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Contact Number</label>
                                    @Html.EditorFor(model => model.contact_num, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "tel",
                                            placeholder = "Contact Number as 0333(-)1234567"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.contact_num, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @Html.EditorFor(model => model.email, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "email",
                                            placeholder = "Email Address"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.EditorFor(model => model.password, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            type = "password",
                                            placeholder = "Password"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Qualification</label>
                                    @Html.EditorFor(model => model.qualification, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Qualification"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.qualification, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    @Html.EditorFor(model => model.address, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Address"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Role</label>
                                    @Html.EditorFor(model => model.role, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Role"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Grade</label>
                                    @Html.EditorFor(model => model.grade, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Grade"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.grade, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group">
                                    <label>Achievement</label>
                                    @Html.EditorFor(model => model.achievements, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            placeholder = "Achievement"@*, required = "required"*@}
})
                                    @Html.ValidationMessageFor(model => model.achievements, "", new { @class = "text-danger small font-weight-bold" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="pull-left"></div>
                                <div class="pull-right">
                                    <button class="btn btn-primary btn-sm scroll-click"><i class="icon-copy fa fa-plus-square" aria-hidden="true"></i> &nbsp;REGISTER</button>
                                </div>
                            </div>
                        </div>}
                </div>
                <!-- Form grid End -->

            </div>
        </div>
    </div>


    <!-- js -->
    <script src="~/Templates/Admin/vendors/scripts/core.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/script.min.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/process.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/layout-settings.js"></script>
    <script src="~/Templates/Admin/src/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="~/Templates/Admin/vendors/scripts/steps-setting.js"></script>
</body>
</html>